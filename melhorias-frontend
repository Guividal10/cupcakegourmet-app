+import Link from "next/link";
+import Image from "next/image";
+import { useState } from "react";
+
+export default function Header() {
+  const [open, setOpen] = useState(false);
+
+  return (
+    <header className="w-full shadow-sm bg-white sticky top-0 z-40">
+      <div className="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
+        <Link href="/">
+          <a aria-label="Página inicial" className="flex items-center gap-3">
+            <div className="w-10 h-10 relative">
+              <Image src="/logo.png" alt="Cupcake Gourmet" fill sizes="40px" />
+            </div>
+            <span className="text-2xl font-semibold">Cupcake Gourmet</span>
+          </a>
+        </Link>
+
+        <nav className="hidden md:flex gap-6 items-center" aria-label="Menu principal">
+          <Link href="/catalogo"><a className="hover:underline focus:outline-none focus:ring-2 focus:ring-offset-2 rounded">Cardápio</a></Link>
+          <Link href="/meus-pedidos"><a className="hover:underline focus:outline-none focus:ring-2 focus:ring-offset-2 rounded">Meus Pedidos</a></Link>
+          <Link href="/conta"><a className="hover:underline focus:outline-none focus:ring-2 focus:ring-offset-2 rounded">Conta</a></Link>
+          <button aria-label="Abrir carrinho" className="px-3 py-2 rounded-md border focus:outline-none focus:ring-2">
+            Carrinho
+          </button>
+        </nav>
+
+        <div className="md:hidden">
+          <button
+            aria-controls="mobile-menu"
+            aria-expanded={open}
+            aria-label={open ? "Fechar menu" : "Abrir menu"}
+            onClick={() => setOpen(!open)}
+            className="p-2 rounded-md focus:outline-none focus:ring-2"
+          >
+            {open ? "✕" : "☰"}
+          </button>
+        </div>
+      </div>
+
+      {open && (
+        <div id="mobile-menu" className="md:hidden bg-white border-t">
+          <div className="px-4 py-3 flex flex-col gap-2">
+            <Link href="/catalogo"><a className="py-2">Cardápio</a></Link>
+            <Link href="/meus-pedidos"><a className="py-2">Meus Pedidos</a></Link>
+            <Link href="/conta"><a className="py-2">Conta</a></Link>
+            <button aria-label="Abrir carrinho" className="py-2 text-left">Carrinho</button>
+          </div>
+        </div>
+      )}
+    </header>
+  );
+}

+import Image from "next/image";
+
+export default function CupcakeCard({ nome, imagem, descricao, href }) {
+  return (
+    <article className="rounded-xl shadow p-4 bg-white">
+      <a href={href || "#"} className="block group">
+        <div className="w-full h-56 relative overflow-hidden rounded-lg">
+          <Image
+            src={imagem}
+            alt={`Imagem de ${nome}`}
+            fill
+            sizes="(max-width: 640px) 100vw, 400px"
+            style={{ objectFit: "cover" }}
+            placeholder="empty"
+            priority={false}
+          />
+        </div>
+
+        <h2 className="text-xl font-semibold mt-3 group-hover:underline">{nome}</h2>
+        <p className="text-gray-600 text-sm mt-1">{descricao}</p>
+      </a>
+    </article>
+  );
+}
